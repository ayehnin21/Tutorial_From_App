<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Switcher">

    <Button
        android:id="@+id/btnGotoImageSwitcher"
        style="@style/n_btn_style"
        android:layout_marginTop="108dp"
        android:text="Go to image switcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGotoTextSwitcher"
        style="@style/n_btn_style"
        android:layout_marginTop="16dp"
        android:text="Go to text view switcher"
        app:layout_constraintEnd_toEndOf="@+id/btnGotoImageSwitcher"
        app:layout_constraintStart_toStartOf="@+id/btnGotoImageSwitcher"
        app:layout_constraintTop_toBottomOf="@+id/btnGotoImageSwitcher" />
</androidx.constraintlayout.widget.ConstraintLayout>